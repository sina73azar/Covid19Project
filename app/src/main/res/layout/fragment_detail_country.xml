                android:text="@string/one_per_people"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/tv_cases_per_pop_st" />

            <TextView
                android:id="@+id/tv_cases_per_pop_st"
                style="@style/style_tv_st_df"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:elevation="12dp"
                android:text="@string/cases_per_population_st"
                app:layout_constraintBottom_toTopOf="@+id/tv_one_per_people_st"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/tv_one_per_mil_st" />

            <TextView
