                style="@style/style_tv_numbers"
                android:elevation="12dp"
                android:text="..."
                app:layout_constraintBottom_toBottomOf="@+id/tv_st_all"
                app:layout_constraintEnd_toStartOf="@+id/tv_st_all"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/tv_st_all" />

            <TextView
                android:id="@+id/tv_critical_data"
