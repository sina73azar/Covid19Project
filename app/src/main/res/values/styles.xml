<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_tv_title_df">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/b_yaghut</item>
        <item name="fontWeight">200</item>
    </style>

    <style name="style_tv_st_df">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/b_yaghut</item>
    </style>

    <style name="style_tv_numbers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/samim_number</item>
    </style>
    <style name="ShapeAppearance.MyApp" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="style_text_1">
        <item name="fontFamily">@font/b_yaghut</item>
        <item name="android:textColor">@color/blue_earth_900</item>
    </style>
    <style name="style_text_2">
        <item name="fontFamily">@font/b_yaghut_bold</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>
    <style name="style_numbers">
        <item name="fontFamily">@font/samim_number</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>